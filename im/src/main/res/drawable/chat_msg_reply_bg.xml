<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#ffe9e9e9"
                android:startColor="#ffffff"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item
        android:bottom="3px"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <stroke
                android:width="1px"
                android:color="#B5B5B5"/>
            <solid android:color="#ffffff"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

</layer-list>