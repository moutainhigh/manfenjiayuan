<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_buttonImage"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="5dp"
            android:contentDescription="@null" />

        <TextView
            style="@style/HighlightNumberStyle"
            android:id="@+id/tab_mes"
            android:layout_toStartOf="@+id/iv_buttonImage"
            android:layout_marginStart="-10dp"
            android:layout_alignParentTop="true"
            android:text="99+"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_buttonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="冰珊孤雪"
        android:textColor="@color/menu_item_text"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>
