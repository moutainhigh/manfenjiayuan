<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/material_white"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">
        <!--商品数-->
        <TextView
            android:id="@+id/tv_goods_number"
            style="@style/mfh_form_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_pricetype"
            android:singleLine="true"
            android:text="商品数"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_greentags_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:src="@mipmap/ic_settings_white_64"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_sync_greentags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/fab_greentags_settings"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:src="@mipmap/ic_sync_greentags_white_64"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
