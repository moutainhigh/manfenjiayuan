<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mf_simple_dialog_width"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/contentview_dialog_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_double">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <com.bingshanguxue.vector_uikit.widget.AvatarView
                android:id="@+id/iv_header"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/chat_tmp_user_head" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/material_black"
                android:textSize="@dimen/textsize_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="手机号"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/textsize_normal" />

                <EditText
                    android:id="@+id/et_phoneNumber"
                    style="@style/mfh_edittext_normal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:hint="请输入手机号"
                    android:inputType="phone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/label_verifycode"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/textsize_normal" />

                <EditText
                    android:id="@+id/et_verifyCode"
                    style="@style/mfh_edittext_normal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:hint="请输入验证码"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/button_get_verifycode"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/btn_corner_green"
                    android:gravity="center"
                    android:text="@string/button_get_verifycode"
                    android:textColor="@color/material_white"
                    android:textSize="@dimen/textsize_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="卡号"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/textsize_normal" />

                <EditText
                    android:id="@+id/et_card_number"
                    style="@style/mfh_edittext_normal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:hint="请输入卡面号"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="芯片号"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/textsize_normal" />

                <EditText
                    android:id="@+id/et_card_id"
                    style="@style/mfh_edittext_normal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:hint="请将焦点定位到输入框并刷卡"
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/animProgress"
            style="@style/loading"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <!--按键-->
    <include layout="@layout/view_dialog_footer" />

</LinearLayout>