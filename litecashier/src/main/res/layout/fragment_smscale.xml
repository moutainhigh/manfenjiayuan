<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_micro"
                android:text="192.168.18.60:21"
                android:textColor="@color/material_black"/>



            <Button
                android:id="@+id/button_write_csv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_greentags"
                android:text="Write CSV"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button_write_csv_encoding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_greentags"
                android:text="Write CSV Encoding"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button_bean2csv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_greentags"
                android:text="Bean 2 CSV"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button_csv2bean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_greentags"
                android:text="CSV 2 Bean"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button_read_csv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button_greentags"
                android:text="Read CSV"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button_upload2ftp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Upload 2 FTP"
                android:layout_marginTop="4dp"
                android:textColor="#000000"
                android:textStyle="normal" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
