<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="277dp"
    android:layout_height="80dp"
    android:id="@+id/rootview"
    android:orientation="horizontal"
    android:background="@mipmap/bg_coupon_green"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tv_coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_amount"
        android:textColor="@color/material_white"
        android:textSize="42sp"
        android:singleLine="true"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_coupon_amount"
        android:orientation="vertical"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp">
        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/material_white"
            android:textSize="14sp"
            android:gravity="end"/>
        <TextView
            android:id="@+id/tv_coupon_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="描述"
            android:gravity="end"
            android:textColor="@color/material_white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_coupon_valid_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="有效期"
            android:gravity="end"
            android:textColor="@color/material_white"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_ratio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_coupon_covering_selected"
        android:scaleType="centerInside"
        android:background="@null"
        android:contentDescription="@null"/>

</RelativeLayout>