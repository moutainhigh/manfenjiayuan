<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="@dimen/home_leftslide_width"
    android:layout_height="@dimen/home_leftslide_height"
    android:background="@drawable/bg_leftmenu_item"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_buttonImage"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_leftmenu_cashier_normal"
            android:layout_centerInParent="true"
            android:contentDescription="@null" />

        <TextView
            style="@style/HighlightNumberStyle"
            android:id="@+id/tab_mes"
            android:layout_toEndOf="@+id/iv_buttonImage"
            android:layout_marginStart="-10dp"
            android:layout_alignParentTop="true"
            android:text="99+"
            android:textColor="@color/material_white"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_buttonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="冰珊孤雪"
        android:textColor="@color/menu_item_text"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

</LinearLayout>
