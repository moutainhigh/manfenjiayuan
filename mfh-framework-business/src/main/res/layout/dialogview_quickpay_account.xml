<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include
        android:id="@+id/frame_top"
        layout="@layout/dialogview_headerview"/>

    <!--应收金额-->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <com.bingshanguxue.vector_uikit.FontFitTextView
            android:id="@+id/tv_handle_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FE5000"
            android:textSize="40px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:drawablePadding="4dp"
            android:drawableStart="@mipmap/ic_marker_money_small"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize_normal"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:padding="@dimen/spacing_double">

        <!--授权码-->
        <EditText
            android:id="@+id/et_password"
            style="@style/mfh_edittext_normal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/spacing_double"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:hint="请输入支付密码"
            android:inputType="textPassword"
            android:maxLength="6"/>

        <LinearLayout
            android:id="@+id/frame_process"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/animProgress"
                style="@style/loading"
                android:layout_width="30dip"
                android:layout_height="30dip"/>

            <TextView
                android:id="@+id/tv_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_double"
                android:text="正在发起支付请求"
                android:textColor="@color/material_black"
                android:textSize="16sp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>