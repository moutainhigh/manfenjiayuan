<resources>

    <style name="AppBaseTheme_Light.FullScreen">
        <!--<item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>
        <!--<item name="android:displayOptions">homeAsUp|showTitle|showHome</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!-- Customize your theme here. -->
        <item name="android:listChoiceIndicatorMultiple">@drawable/mfhtheme_btn_check_holo_dark</item>
    </style>

    <!-- 夜间模式 -->
    <style name="AppBaseTheme_Night" parent="@style/Theme.AppCompat.NoActionBar"><!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/material_white</item>
    </style>

    
    <style name="TransparentToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/material_white</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <!--透明-->
    <style name="TransparentActivity" parent="AppBaseTheme_Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NewFlow" parent="AppBaseTheme_Light.FullScreen">
        <item name="android:windowAnimationStyle">@style/anim_bottom_in</item>
    </style>

</resources>
