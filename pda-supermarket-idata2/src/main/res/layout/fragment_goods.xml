<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">
    <include
        android:id="@+id/appbar"
        layout="@layout/appbar_scan_barcode"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--内容区-->
            <!--商品名称-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_productName"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:rightTextSingleLine="false"
                app:textLabelView_leftText="商品名称:"/>
            <!--条码-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_barcodee"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:rightTextSingleLine="false"
                app:textLabelView_leftText="条码:"/>
            <!--采购价-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_buyprice"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:rightTextSingleLine="false"
                app:textLabelView_leftText="采购价:"/>
            <!--零售价（可编辑）-->
            <com.bingshanguxue.pda.widget.EditLabelView
                android:id="@+id/label_costPrice"
                style="@style/mfh_editlabelview"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:editLabelView_leftText="零售价:"
                app:editLabelView_rightHint="请输入零售价格"/>
            <!--毛利率-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_grossProfit"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:textLabelView_leftText="毛利率:"/>
            <!--30天平均销量-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_sellMonthNum"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:textLabelView_leftText="30天销量:"/>
            <!--库存-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_quantity"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:textLabelView_leftText="库存:"/>
            <!--排面库存（可编辑）-->
            <com.bingshanguxue.pda.widget.EditLabelView
                android:id="@+id/label_upperLimit"
                style="@style/mfh_editlabelview"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:editLabelView_leftText="排面库存:"
                app:editLabelView_rightHint="请输入排面库存"/>


            <!--<com.bingshanguxue.pda.widget.EditLabelView-->
            <!--android:id="@+id/label_lowwerLimit"-->
            <!--style="@style/mfh_editlabelview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="52dp"-->
            <!--app:editLabelView_leftText="安全库存:"-->
            <!--app:editLabelView_rightHint="请输入安全库存"/>-->

            <!--批发商-->
            <com.mfh.framework.uikit.compound.SettingsItem
                android:id="@+id/label_provider"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="@dimen/spacing_micro"
                app:isLogoVisible="false"
                app:position="center"
                app:subText=""
                app:text="供应商"
                app:textSize="18px"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <!--结算-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_cancel"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/spacing_double"
        android:src="@mipmap/ic_cancel_white_24"
        app:backgroundTint="@color/mfh_negative_defalult"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"
        android:visibility="gone"
        app:rippleColor="@color/material_green_800"/>

    <!--结算-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_double"
        android:src="@mipmap/ic_fab_confirm"
        app:backgroundTint="@color/mfh_positive_default"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"
        app:rippleColor="@color/material_green_800"/>

</android.support.design.widget.CoordinatorLayout>




