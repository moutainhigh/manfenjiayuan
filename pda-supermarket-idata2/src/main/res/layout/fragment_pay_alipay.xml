<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_pay_info"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <!--授权码-->
        <com.bingshanguxue.vector_uikit.widget.EditLabelView
            android:id="@+id/et_barCode"
            style="@style/mfh_editlabelview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/spacing_double"
            app:editInputType="textPassword"
            app:editTextHint="请输入授权码"
            app:editTextSize="18sp"
            app:startText="授权码"
            app:startTextWidth="90dp"
            app:startTextColor="@color/black_70"
            app:startTextSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pay_loading"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:singleLine="true"
            android:text="0秒"
            android:textColor="#FE5000"
            android:textSize="64sp" />

        <LinearLayout
            android:id="@+id/ll_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/animProgress"
                style="@style/loading"
                android:layout_width="30dip"
                android:layout_height="30dip" />

            <TextView
                android:id="@+id/tv_process"
                style="@style/mfh_textview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="正在发起支付请求"
                android:textColor="@color/black_60" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_query_orderstatus"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/btn_hollow_green"
        android:text="查询订单"
        android:textColor="@color/black_65"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_cancel_order"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button_query_orderstatus"
        android:layout_margin="16dp"
        android:background="@drawable/btn_hollow_red"
        android:text="撤销订单"
        android:textColor="@color/black_65"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>
