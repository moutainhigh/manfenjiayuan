<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">


    <include layout="@layout/appbar_scan_barcode"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_horizontal_line"
        android:showDividers="middle"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--导航-->
        <com.bingshanguxue.vector_uikit.slideTab.TopSlidingTabStrip
            android:id="@+id/tab_page"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_white"
            app:allowWidthFull="true"
            app:slidingBlock="@drawable/slidingblock_white_greenline"/>

        <!--内容区-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_pagecontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/material_white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_fab_confirm"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_double"
        android:visibility="gone"
        app:backgroundTint="@color/mfh_positive_default"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"
        app:rippleColor="@color/material_green_800"/>

</android.support.design.widget.CoordinatorLayout>
