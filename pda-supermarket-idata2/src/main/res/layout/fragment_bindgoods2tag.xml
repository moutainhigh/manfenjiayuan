<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">


    <include layout="@layout/appbar_scan_barcode"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.bingshanguxue.pda.widget.TextLabelView
                    android:id="@+id/label_barcodee"
                    style="@style/mfh_textlabelview"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:startText="商品条码:"/>

                <com.bingshanguxue.pda.widget.TextLabelView
                    android:id="@+id/label_productName"
                    style="@style/mfh_textlabelview"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:startText="商品名称:"/>

                <com.bingshanguxue.pda.widget.TextLabelView
                    android:id="@+id/label_costPrice"
                    style="@style/mfh_textlabelview"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:startText="零售价:"/>

                <com.bingshanguxue.pda.widget.TextLabelView
                    android:id="@+id/label_quantity"
                    style="@style/mfh_textlabelview"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:startText="库存:"/>

                <com.bingshanguxue.pda.widget.EditLabelView
                    android:id="@+id/label_tagno"
                    style="@style/mfh_editlabelview"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    app:startText="标签条码:"
                    app:startTextWidth="130dp"
                    app:editInputType="numberDecimal"
                    app:editTextHint="请输入标签条码"/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <!--结算-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_double"
        android:src="@mipmap/ic_fab_confirm"
        app:backgroundTint="@color/mfh_positive_default"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"
        app:rippleColor="@color/material_green_800"/>

</android.support.design.widget.CoordinatorLayout>
