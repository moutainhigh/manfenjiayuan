<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="?attr/actionBarSize"
                                   android:background="@color/mfh_toolbar_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_micro"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_micro">

        <com.bingshanguxue.pda.widget.ScanBar
            android:id="@+id/scanBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_toStartOf="@+id/iv_search"
            android:weightSum="1"
            app:hint="请扫描商品条码"
            app:mfh_inputType="barcode"
            app:textColor="@color/black"
            app:textColorHint="@color/black_35"
            app:textSize="16px"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:background="@null"
            android:src="@mipmap/ic_toolbar_search_white"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>