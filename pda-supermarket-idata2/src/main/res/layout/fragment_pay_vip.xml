<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_pay_info"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!--芯片号-->
        <com.bingshanguxue.vector_uikit.widget.EditLabelView
            android:id="@+id/et_barCode"
            style="@style/mfh_editlabelview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/spacing_double"
            app:editInputType="textPassword"
            app:editTextHint="请输入付款码"
            app:editTextSize="18sp"
            app:startText="付款码"
            app:startTextWidth="90dp"
            app:startTextColor="@color/black_70"
            app:startTextSize="18sp"/>

    </LinearLayout>

    <com.manfenjiayuan.pda_supermarket.ui.store.pay.PayProcessView
        android:id="@+id/payProcessView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
