<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--内容区-->
            <!--总销量-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_sellNumber"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:endTextSingleLine="false"
                app:startText="总销量:"
                app:startTextWidth="130dp"/>
            <!--平均销量-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_avgSellNum"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:endTextSingleLine="false"
                app:startText="平均销量:"
                app:startTextWidth="130dp"/>
            <!--日销量-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_sellDayNum"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="日销量:"
                app:startTextWidth="130dp"/>
            <!--30天平均销量-->
            <com.bingshanguxue.pda.widget.TextLabelView
                android:id="@+id/label_sellMonthNum"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="30天销量:"
                app:startTextWidth="130dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>




