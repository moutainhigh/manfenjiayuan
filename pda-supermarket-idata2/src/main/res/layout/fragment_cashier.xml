<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fitsSystemWindows="true">

    <include layout="@layout/appbar_scan_barcode"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/material_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingEnd="@dimen/spacing_double"
        android:paddingStart="@dimen/spacing_double">

        <!--数量和价格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:baselineAligned="false"
            android:divider="@drawable/divider_vertical_line"
            android:dividerPadding="12dp"
            android:gravity="center"
            android:showDividers="middle">

            <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                android:id="@+id/label_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:bottomText="数量"
                app:bottomTextColor="@color/black_70"
                app:bottomTextSize="14sp"
                app:topText="0"
                app:topTextColor="#FF009B4E"
                app:topTextSize="30sp"/>

            <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                android:id="@+id/label_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:bottomText="金额"
                app:bottomTextColor="@color/black_70"
                app:bottomTextSize="14sp"
                app:topText="0"
                app:topTextColor="#FFFE5000"
                app:topTextSize="30sp"/>
        </LinearLayout>

        <include
            android:id="@+id/ll_procuct_header"
            layout="@layout/itemview_header_cashier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--商品列表-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

