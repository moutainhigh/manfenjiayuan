<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 android:orientation="vertical">

    <include layout="@layout/appbar_scan_barcode"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--内容区-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_productName"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="商品名称:"
                app:startTextGravity="end"
                app:startTextWidth="90dp"/>

            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_barcode"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="商品条码:"
                app:startTextGravity="end"
                app:startTextWidth="90dp"/>

            <!--规格-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_shortname"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="规格:"
                app:startTextGravity="end"
                app:startTextWidth="90dp"/>

            <!--价格&单位-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_costPrice"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="零售价:"
                app:startTextGravity="end"
                app:startTextWidth="90dp"/>

            <!--商品积分-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_costScore"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="商品积分:"
                app:startTextGravity="end"
                app:startTextWidth="90dp"/>
            <!--产地-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_prodArea"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="产地:"
                app:startTextGravity="end"
                app:startTextWidth="90dp"/>
            <!--等级-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_prodLevel"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="等级:"
                app:startTextGravity="end"
                app:startTextWidth="90dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_double"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <!--扫描-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_scan"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/spacing_double"
            android:src="@mipmap/ic_fab_scan"
            app:backgroundTint="@color/mfh_positive_default"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:rippleColor="@color/material_green_800"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_submit"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/ic_fab_submit"
            app:backgroundTint="@color/mfh_positive_default"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:rippleColor="@color/material_green_800"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

