<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================================================= -->

    <style name="BodyContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ButtonLinkedStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/comn_button_linked</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textColor">#ff2d77ff</item>
    </style>

    <style name="LineSeparateStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/comn_separate_bg</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Transparent_wait_screen">
        <item name="android:windowBackground">@color/dialog_wait</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Transparent_wait">
        <item name="android:windowBackground">@color/dialog_wait</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- View -->
    <style name="wrap_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fullline_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- TopBar -->
    <style name="topbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:background">@drawable/topbar_bg</item><!--黑色#ff000000，白色#fffdfdfd-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="topbar_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingStart">@dimen/space_primary</item>
        <item name="android:paddingEnd">@dimen/space_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="topbar_icon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="topbar_right_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Dialog -->
    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="dialog_common" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:editTextBackground">@drawable/bg_input_rectange</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="dialog_title" parent="@style/fullline_view">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_subtitle" parent="@style/fullline_view">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="dialog_divider">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="dialog_button">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/touch_clear_bg</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">46.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!-- 分享对话框样式 start -->
    <style name="dialog_share" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@drawable/dialog_bottom_background</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--模糊-->
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>

    <style name="dialog_content_share_ll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dialog_content_share_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">#a0808080</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 分享对话框样式 end -->

    <!-- Text -->
    <style name="text_base" parent="@style/wrap_view">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text_multiline" parent="@style/text_base">
        <item name="android:maxLines">5</item>
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>

    <style name="dialog_pinterest_text" parent="@style/text_multiline">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_width">fill_parent</item>
    </style>


    <style name="section_item_divider">
        <item name="android:background">@color/list_divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="section_item_divider_vertical">
        <item name="android:background">@color/list_divider_color</item>
        <item name="android:layout_width">0.1px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!--ListItem-->
    <style name="listitem_text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="listitem_text_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ff929292</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- List item-->
    <style name="list_item_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/material_white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_item_text_dialog" parent="@style/list_item_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#5E5E5E</item>
    </style>

    <style name="list_item_divider">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#cccccc</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="separator_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_gray</item>
    </style>

    <style name="separator_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_gray</item>
    </style>

    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>

    <!-- viewpage文本  滑动标签标题 -->
    <style name="viewpage_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/viewpage_selector_slide_title</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!--搜索Button样式-->
    <style name="searchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_button_bg</item>
        <item name="android:drawableLeft">@drawable/search_bar_icon_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/search_bar_hint</item>
        <item name="android:textColorHint">#8E8E93</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!--Animation-->
    <style name="anim_bottom_in" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="activity_right_fade_in_out" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_fade_out</item>
    </style>

    <style name="anim_dialog" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/dialog_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/dialog_exit</item>
    </style>


    <style name="toolbar_title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--<style name="activity_new_task2" parent="AppTheme_NoTitleBar">-->
    <!--<item name="android:windowEnterAnimation">@anim/bottom_in</item>-->
    <!--<item name="android:windowExitAnimation">@anim/zoom_out</item>-->
    <!--</style>-->

    <style name="GridPasswordView"/>

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

</resources>
