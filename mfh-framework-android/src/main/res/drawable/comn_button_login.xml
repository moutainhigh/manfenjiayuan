<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="#ff00ba0a" android:width="1px"/>
            <gradient android:angle="90"
                android:startColor="#ff59f163"
                android:endColor="#ff5ee768"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:color="#ff00ba0a" android:width="1px"/>
            <gradient android:angle="90"
                android:startColor="#ff00d407"
                android:endColor="#ff00dc1f"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

</selector>