<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--白色，底部一条30%透明度的黑色线-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E8E8E7" />
        </shape>
    </item>

    <item android:top="8dp" android:bottom="8dp" android:right="16dp"  android:left="16dp" >
        <shape android:shape="rectangle">
            <stroke android:color="#C8C7CC" android:width="1px"/>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

</layer-list>