<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/group_item_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/material_white"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_header_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_msg_store"
            android:layout_centerVertical="true"
            android:contentDescription=""/>

        <TextView
            android:id="@+id/tv_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/label_message_store"
            android:layout_toEndOf="@+id/iv_header_1"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#000000"/>
    </RelativeLayout>


    <View
        android:id="@+id/top_line"
        style="@style/separator_horizontal"
        android:layout_height="0.5dp"
        android:layout_below="@+id/group_item_1"/>

    <RelativeLayout
        android:id="@+id/group_item_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_line"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/material_white">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/iv_header_2"
            android:src="@drawable/icon_msg_surround"
            android:layout_centerVertical="true"
            android:contentDescription=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/label_message_surround"
            android:id="@+id/tv_label_2"
            android:layout_toEndOf="@+id/iv_header_2"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#000000"/>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/separator_horizontal"
        android:layout_height="0.5dp"
        android:layout_below="@+id/group_item_2"/>

</RelativeLayout>
