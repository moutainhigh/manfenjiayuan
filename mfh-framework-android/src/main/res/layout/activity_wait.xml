<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@color/dialog_wait">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/animProgress"
            style="@style/loading"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_meaasge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_my"
            android:textSize="18sp"
            android:layout_below="@+id/animProgress"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/space_primary"
            android:singleLine="true"
            android:ellipsize="end"/>
    </RelativeLayout>

</RelativeLayout>