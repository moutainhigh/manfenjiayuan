<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
                
        <layer-list>            
            <item>                
                <shape android:shape="rectangle">                    
                    <solid android:color="@color/black_20" />
                    <padding
                        android:bottom="8px"
                        android:left="0px"
                        android:right="8px"
                        android:top="0px" />

                    <gradient android:startColor="@color/material_white"
                        android:endColor="@color/black_40"
                        android:angle="270"/>
                                    
                    <corners android:radius="44dp" />
                </shape>
                            
            </item>
                        
            <item>                
                <shape android:shape="rectangle">                    
                    <solid android:color="@color/black_60" />
                                        
                    <padding
                        android:bottom="2px"
                        android:left="2px"
                        android:right="2px"
                        android:top="2px" />

                    <corners android:radius="44dp" />
                                    
                </shape>
                            
            </item>             
                    
        </layer-list>
            
    </item>        

</layer-list>