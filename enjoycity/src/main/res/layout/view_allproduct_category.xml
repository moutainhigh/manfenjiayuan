<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_listview_item"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginEnd="@dimen/default_margin_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="冰珊孤雪"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_category_show"
            android:contentDescription=""
            android:padding="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:divider="@drawable/divider_horizontal_line"
        android:showDividers="beginning|middle"
        android:dividerPadding="0dp">

    </LinearLayout>

</LinearLayout>
