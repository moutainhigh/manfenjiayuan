<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_white"
    android:orientation="vertical">

    <View
        android:id="@+id/separate_top"
        style="@style/separator_horizontal"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/listitem_content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            style="@style/listitem_text_title"
            android:id="@+id/tv_title"
            android:text="头像"
            android:gravity="left"
            android:layout_weight="1" />

        <com.bingshanguxue.vector_uikit.widget.AvatarView
            android:id="@+id/iv_header"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:src="@drawable/chat_tmp_user_head" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/iv_arrow_right"
            android:src="@mipmap/icon_arrow_right"
            android:scaleType="centerInside"
            android:contentDescription="" />
    </LinearLayout>

    <View
        android:id="@+id/separate_bottom"
        style="@style/separator_horizontal"
        android:visibility="visible" />

</LinearLayout>
