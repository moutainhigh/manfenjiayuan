<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/material_white"
    android:divider="@drawable/divider_horizontal_line"
    android:showDividers="beginning|middle|end">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mf_spac_horizontal_primary">

        <ImageView
            android:id="@+id/iv_shop_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_shop"
            android:contentDescription=""
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_marginEnd="@dimen/space_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="冰珊孤雪"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_shop_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_less"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:divider="@drawable/divider_horizontal_line"
            android:showDividers="middle|end"
            android:dividerPadding="8dp"
            android:paddingStart="28dp">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:divider="@drawable/divider_horizontal_line"
            android:showDividers="middle|end"
            android:dividerPadding="8dp"
            android:paddingStart="28dp">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mf_spac_horizontal_primary"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_total_description"
                android:layout_marginEnd="@dimen/space_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="共6件商品"
                android:layout_marginStart="24dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展开"
                android:textColor="#ff6655"
                android:gravity="center|end"
                android:drawablePadding="4dp"
                android:background="@null"/>

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_down"
                android:layout_marginStart="4dp"
                android:background="@null"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
