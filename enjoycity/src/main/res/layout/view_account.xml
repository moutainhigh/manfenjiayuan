<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_arrow_right"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:contentDescription=""
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginEnd="@dimen/default_margin_right"
        style="@style/listitem_text_title"
        android:text="冰珊孤雪"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/iv_arrow"/>
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_marginEnd="@dimen/default_margin_right"
        style="@style/listitem_text_detail"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="4dp"
        android:text="账户余额"/>
    <TextView
        android:id="@+id/tv_detail"
        android:layout_marginEnd="@dimen/default_margin_right"
        style="@style/listitem_text_detail"
        android:layout_alignTop="@+id/tv_subtitle"
        android:textColor="#ff329b4e"
        android:layout_toStartOf="@+id/iv_arrow"
        android:layout_toEndOf="@+id/tv_subtitle"
        android:gravity="start"
        android:text="￥ 0"/>

</RelativeLayout>
