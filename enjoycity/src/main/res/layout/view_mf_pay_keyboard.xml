<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mf_pay_keyboard"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="@drawable/divider_horizontal_line"
    android:showDividers="middle"
    android:background="@color/material_white">

    <ImageButton
        android:id="@+id/ib_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_down"
        android:background="@color/material_white"
        android:padding="12dp"/>

    <LinearLayout
        android:id="@+id/ll_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider_horizontal_line"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_vertical_line"
            android:showDividers="middle">
            <Button
                android:id="@+id/key_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="1"
                android:textColor="@color/material_black"/>
            <Button
                android:id="@+id/key_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="2"
                android:textColor="@color/material_black"/>
            <Button
                android:id="@+id/key_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="3"
                android:textColor="@color/material_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_vertical_line"
            android:showDividers="middle">
            <Button
                android:id="@+id/key_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="4"
                android:textColor="@color/material_black"/>
            <Button
                android:id="@+id/key_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="5"
                android:textColor="@color/material_black"/>
            <Button
                android:id="@+id/key_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="6"
                android:textColor="@color/material_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_vertical_line"
            android:showDividers="middle">
            <Button
                android:id="@+id/key_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="7"
                android:textColor="@color/material_black"/>
            <Button
                android:id="@+id/key_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="8"
                android:textColor="@color/material_black"/>
            <Button
                android:id="@+id/key_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="9"
                android:textColor="@color/material_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_vertical_line"
            android:showDividers="middle">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="1"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/key_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:text="0"
                android:textColor="@color/material_black"/>
            <ImageButton
                android:id="@+id/key_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mf_keyboard_item_bg"
                android:src="@drawable/ic_dialog_close"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
