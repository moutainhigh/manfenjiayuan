<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_shdow_top_gray">

    <com.manfenjiayuan.business.widget.NumberPickerView
        android:id="@+id/view_numberpicker"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/mf_spac_horizontal_primary"/>

    <FrameLayout
        android:id="@+id/shopcart_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:layout_toStartOf="@+id/btn_add_to_cart"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopcart_small_green"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tv_badgeNumber"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:minWidth="16dp"
            android:background="@drawable/badge_shopcart_number_bg"
            android:text="99"
            android:textSize="10sp"
            android:padding="0dp"
            android:textColor="@color/material_white"
            android:layout_gravity="right"
            android:gravity="center"/>
    </FrameLayout>

    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_add_to_shopcart_bg"
        android:text="添加到购物车"
        android:textColor="@color/material_white"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
