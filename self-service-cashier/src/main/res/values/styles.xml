<resources>



    <style name="mfh_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_form</item>
        <item name="android:padding">1px</item>
    </style>
    <!--表格头-->
    <style name="mfh_form_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_header_height_default</item>
        <item name="android:background">@drawable/bg_form_header_bottomline</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mfh_form_header_text" parent="@style/mfh_textview_text">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="mfh_form_header_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_header_height_default</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mfh_form_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_header_height_default</item>
        <item name="android:background">@drawable/bg_form_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mfh_form_content_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_header_height_default</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mfh_form_content_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mf_form_content_text</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--单行文本：默认字体颜色黑色，字号16sp。-->
    <style name="singleline_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_black</item>
        <!--<item name="android:singleLine">true</item>-->
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--EditText-->
    <style name="mfh_edittext_normal">
        <item name="android:background">@drawable/bg_input_rectange</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/material_black</item>
        <item name="android:textColorHint">@color/material_black_hint</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="mfh_textview_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>



</resources>
