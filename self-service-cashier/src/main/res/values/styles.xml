<resources>



    <style name="mfh_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_form</item>
        <item name="android:padding">1px</item>
    </style>
    <!--表格头-->
    <style name="mfh_form_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_header_height_default</item>
        <item name="android:background">@drawable/bg_bottomline_primary</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mfh_form_header_text" parent="@style/mfh_textview_text">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="mfh_form_header_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_header_height_default</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mfh_form_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_header_height_default</item>
        <item name="android:background">@drawable/bg_form_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mfh_form_content_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/form_header_height_default</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mfh_form_content_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mf_form_content_text</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--单行文本：默认字体颜色黑色，字号16sp。-->
    <style name="singleline_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_black</item>
        <!--<item name="android:singleLine">true</item>-->
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="mfh_textview_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--自定义fab样式用于imageButton-->
    <style name="FloatImageButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/bg_fab_circle_green</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>


</resources>
