<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_white"
                android:baselineAligned="false"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/frame_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mfh_toolbar_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/spacing_double"
        android:paddingStart="@dimen/spacing_double">

        <TextView
            android:id="@+id/tv_header_title"
            style="@style/singleline_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:padding="4dp"
            android:text=""
            android:textColor="@color/material_white"
            android:textSize="20sp"
            />

        <ImageButton
            android:id="@+id/button_header_reload"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/spacing_double"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@mipmap/ic_syncdata_white"/>

        <ImageButton
            android:id="@+id/button_header_close"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/spacing_double"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/ic_toolbar_close"/>

    </LinearLayout>

    <!--商品金额-->
    <LinearLayout
        android:id="@+id/ll_quota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_top"
        android:layout_gravity="center_horizontal"
        android:background="@color/mfhtheme_maskPrimary"
        android:baselineAligned="false"
        android:divider="@drawable/divider_vertical_line_primary"
        android:dividerPadding="12dp"
        android:padding="12dp"
        android:showDividers="middle">
        <!--商品金额-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/label_quota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="授信金额"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/material_black"
            app:topTextSize="30sp"/>

        <!--价格调整-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/label_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="已用金额"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>

        <!--已付金额-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/label_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="可用金额"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="#FE5000"
            app:topTextSize="30sp"/>

    </LinearLayout>

    <!--头部-->
    <include
        android:id="@+id/frame_header_goods_list"
        layout="@layout/itemview_cashquota_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/ll_quota"
        android:layout_marginEnd="@dimen/spacing_double"
        android:layout_marginStart="@dimen/spacing_double"/>

    <!--android:layout_height="308dp"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/frame_header_goods_list"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_double"
        android:layout_marginStart="@dimen/spacing_double"
        android:layout_marginTop="@dimen/spacing_normal">
        <!--空视图-->
        <TextView
            android:id="@+id/empty_view"
            style="@style/mfh_textview_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无数据"
            android:visibility="gone"/>

        <!--订单列表-->
        <com.mfh.framework.uikit.recyclerview.RecyclerViewEmptySupport
            android:id="@+id/order_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/fab_print"
        style="@style/FloatImageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/spacing_double"
        android:contentDescription="@null"
        android:src="@mipmap/ic_cash_white"/>


</RelativeLayout>
