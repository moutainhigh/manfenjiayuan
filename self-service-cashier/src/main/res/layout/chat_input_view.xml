<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/spacing_normal"
    android:background="@color/mfhtheme_maskPrimary">

    <EditText
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="48dp"
        android:background="?android:editTextBackground"
        android:gravity="bottom|start"
        android:textColor="@color/material_black"
        android:textColorHint="@color/material_black_hint"
        android:textSize="@dimen/ch_fontsize_button"
        android:hint="点击输入文字"
        android:maxLines="4"/>

    <ImageButton
        android:id="@+id/ib_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="0"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_chat_emoji" />

    <ImageButton
        android:id="@+id/ib_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="0"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_chat_goods" />

    <ImageButton
        android:id="@+id/ib_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="0"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_chat_coupon" />

    <Button
        android:id="@+id/button_send"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_rectange_green"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:text="发送"
        android:textColor="@color/material_white"
        android:textSize="@dimen/ch_fontsize_button"
        android:visibility="visible" />
</LinearLayout>