<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_white"
                android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_lastorder"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <!--上一单信息-->
            <LinearLayout
                android:id="@+id/frame_lastorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_last_amount"
                    style="@style/singleline_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="合计：¥0.00"
                    />

                <TextView
                    android:id="@+id/tv_last_quantity"
                    style="@style/singleline_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="数量：0.00"
                    />

                <TextView
                    android:id="@+id/tv_last_discount"
                    style="@style/singleline_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="优惠：¥0.00"
                    />

                <TextView
                    android:id="@+id/tv_last_charge"
                    style="@style/singleline_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="找零：¥0.00"
                    />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--分割线-->
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/app_bar"
        android:background="@color/mf_dividerColorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horizontal_line"
        android:orientation="vertical"
        android:paddingEnd="@dimen/spacing_4x"
        android:paddingStart="@dimen/spacing_4x">

        <!--数量和价格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_4x"
            android:background="@color/material_white"
            android:baselineAligned="false"
            android:divider="@drawable/divider_vertical_line_primary"
            android:dividerPadding="12dp"
            android:gravity="center"
            android:showDividers="middle">

            <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                android:id="@+id/label_original_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:bottomText="@string/original_amount"
                app:bottomTextColor="@color/black_70"
                app:bottomTextSize="16sp"
                app:topText="@string/default_amount"
                app:topTextColor="@color/text_color_red"
                app:topTextSize="48sp"/>

            <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                android:id="@+id/label_customer_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:bottomText="@string/customer_amount"
                app:bottomTextColor="@color/black_70"
                app:bottomTextSize="16sp"
                app:topText="@string/default_amount"
                app:topTextColor="@color/text_color_green"
                app:topTextSize="48sp"/>
        </LinearLayout>

        <!--输入条形码-->
        <com.mfh.litecashier.ui.widget.InputNumberLabelView
            android:id="@+id/inlv_barcode"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/spacing_8x"
            android:layout_marginStart="@dimen/spacing_8x"
            app:editTextSize="@dimen/textsize_normal"
            app:editInputType="barcode"
            app:editTextColor="@color/material_black"
            app:editTextColorHint="@color/mfh_textColorHint"
            app:inputHint="@string/hint_product_barcode"
            app:rightImageButtonSrc="@drawable/btn_switch_goods"/>

        <include
            android:id="@+id/ll_procuct_header"
            layout="@layout/itemview_header_cashier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_4x"/>

        <!--商品列表-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <!--折扣-->
    <TextView
        android:id="@+id/fab_orderDiscount"
        style="@style/singleline_text"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/horizontal_line"
        android:layout_gravity="start|bottom"
        android:layout_margin="@dimen/spacing_double"
        android:background="@drawable/bg_fab_circle_green"
        android:gravity="center"
        android:minWidth="80dp"
        android:text=""
        android:textColor="@color/material_white"
        android:textSize="20sp"
        android:visibility="gone"
        />

    <com.mfh.framework.uikit.compound.BadgeViewButton
        android:id="@+id/buttonPrepareOrder"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/horizontal_line"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/spacing_double"
        app:src="@mipmap/ic_alert_prepareorder"/>

    <!--挂单-->
    <TextView
        android:id="@+id/float_hangup"
        style="@style/singleline_text"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_double"
        android:background="@drawable/bg_fab_circle_green"
        android:gravity="center"
        android:minWidth="80dp"
        android:text=""
        android:textColor="@color/material_white"
        android:textSize="20sp"
        android:visibility="gone"
        />


    <!--结算-->
    <!--
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:pressedTranslationZ="0dp"
        app:rippleColor="@color/material_green_800"-->

    <!--<android.support.design.widget.FloatingActionButton-->
    <!--android:id="@+id/fab_settle"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="end|bottom"-->
    <!--android:layout_marginEnd="@dimen/spacing_double"-->
    <!--android:src="@mipmap/ic_checkmark_white"/>-->
    <ImageButton
        android:id="@+id/fab_pick"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_fab_circle_orange"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_fab_shopcart_white"
        android:layout_alignTop="@+id/fab_settle"
        android:layout_toStartOf="@+id/fab_settle"/>

    <ImageButton
        android:id="@+id/fab_settle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/spacing_double"
        android:background="@drawable/bg_fab_circle_green"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_money_rmb_white"/>

</RelativeLayout>