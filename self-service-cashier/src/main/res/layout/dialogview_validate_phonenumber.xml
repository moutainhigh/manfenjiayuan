<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/mf_simple_dialog_width"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <include layout="@layout/dialogview_headerview"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_double">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="32dp">

                <com.bingshanguxue.vector_uikit.widget.EditLabelView
                    android:id="@+id/et_phoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:editInputType="phone"
                    app:editTextColor="@color/material_black"
                    app:editTextHint="请输入手机号"
                    app:editTextSize="16sp"
                    app:endTextVisible="true"
                    app:softKeyboardEnabled="true"
                    app:startText="手机号"
                    app:startTextGravity="end"
                    app:startTextSize="16sp"
                    app:startTextWidth="90dp"/>

                <Button
                    android:id="@+id/button_get_verifycode"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/btn_corner_green"
                    android:gravity="center"
                    android:text="@string/button_get_verifycode"
                    android:textColor="@color/material_white"
                    android:textSize="@dimen/textsize_normal"/>

            </LinearLayout>

            <com.bingshanguxue.vector_uikit.widget.EditLabelView
                android:id="@+id/et_verifyCode"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                app:editInputType="numberDecimal"
                app:editTextColor="@color/material_black"
                app:editTextHint="请输入您收到的验证码"
                app:editTextSize="16sp"
                app:endTextVisible="true"
                app:softKeyboardEnabled="true"
                app:startText="@string/label_verifycode"
                app:startTextGravity="end"
                app:startTextSize="16sp"
                app:startTextWidth="90dp"/>

            <TextView
                android:id="@+id/tv_tip"
                style="@style/singleline_text"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="验证码已发送到您的手机"
                android:textColor="@color/black_70"
                android:visibility="gone"
                />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/animProgress"
            style="@style/loading"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <!--按键-->
    <include layout="@layout/view_dialog_footer"/>

</LinearLayout>