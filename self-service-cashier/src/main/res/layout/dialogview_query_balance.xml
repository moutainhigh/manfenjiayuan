<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="@dimen/mf_simple_dialog_width"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <include layout="@layout/dialogview_headerview"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_double">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_card_id"
                    style="@style/mfh_edittext_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_4x"
                    android:gravity="center"
                    android:hint="请刷卡"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:minHeight="48dp"
                    android:padding="@dimen/spacing_micro"
                    android:textColor="@color/material_black"
                    android:textSize="16sp">

                    <requestFocus
                        android:duplicateParentState="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                </EditText>

            </RelativeLayout>

            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/tv_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:endTextColor="@color/material_black"
                app:endTextSize="16sp"
                app:startText="余额:"
                app:endText=""
                app:startTextColor="@color/material_black_50"
                app:startTextGravity="end"
                app:startTextSize="16sp"
                app:startTextWidth="80dp"/>

            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                app:endTextColor="@color/material_black"
                app:endTextSize="16sp"
                app:startText="积分:"
                app:startTextColor="@color/material_black_50"
                app:startTextGravity="end"
                app:startTextSize="16sp"
                app:startTextWidth="80dp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/animProgress"
            style="@style/loading"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <!--按键-->
    <include layout="@layout/view_dialog_footer"/>

</LinearLayout>