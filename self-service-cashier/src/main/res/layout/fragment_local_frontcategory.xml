<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/material_white"
                                                 android:divider="@drawable/divider_horizontal_line_primary"
                                                 android:orientation="vertical"
                                                 android:showDividers="middle">

    <!--导航-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_lastorder"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:divider="@drawable/divider_vertical_line_primary"
                android:orientation="horizontal"
                android:showDividers="middle">

                <com.bingshanguxue.vector_uikit.slideTab.TopSlidingTabStrip
                    android:id="@+id/tab_category_goods"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:allowWidthFull="false"
                    app:slidingBlock="@drawable/slidingblock_white_greenline"/>

                <ImageButton
                    android:id="@+id/ib_add"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_add_black"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--内容区-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_category_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
