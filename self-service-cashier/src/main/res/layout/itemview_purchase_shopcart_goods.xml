<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/rootview"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:gravity="center"
              android:orientation="horizontal"
              android:padding="8dp">

    <!--商品基础信息-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical">

        <!--图片-->
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/ic_image_error"
            android:contentDescription="@null" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <!--名称-->
            <TextView
                android:id="@+id/tv_name"
                style="@style/mfh_form_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="商品名称"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tv_barcode"
                style="@style/mfh_form_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/black_65"
                android:layout_below="@+id/tv_name"
                android:text="条码"
                android:maxLines="1"/>

        </RelativeLayout>

    </LinearLayout>

    <!--起配量-->
    <TextView
        android:id="@+id/tv_startnum"
        style="@style/mfh_form_header_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="起配量"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_buyprice"
        style="@style/mfh_form_header_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:text="配销价"
        android:maxLines="1"/>


    <com.bingshanguxue.vector_uikit.NumberPickerView
        android:id="@+id/numberPickerView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:decreaseDrawableAutoHide="true"
        android:layout_weight="1.5"/>


    <TextView
        android:id="@+id/tv_amount"
        style="@style/mfh_form_header_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="总价"
        android:maxLines="1"/>

</LinearLayout>
