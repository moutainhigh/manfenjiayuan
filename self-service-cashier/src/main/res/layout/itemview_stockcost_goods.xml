<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--图片-->
        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/ic_image_error"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!--名称-->
            <TextView
                android:id="@+id/tv_name"
                style="@style/mfh_form_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="名称"/>

            <!--条码-->
            <TextView
                android:id="@+id/tv_barcode"
                style="@style/mfh_form_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black_65"
                android:text="条码" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_upperLimit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_upperLimit"
            style="@style/mfh_form_content_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/ic_marker_edit"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/material_black"
            android:text="排面库存" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_quantity"
        style="@style/mfh_form_content_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/material_black"
        android:text="库存" />

    <TextView
        android:id="@+id/tv_monthlysales"
        style="@style/mfh_form_content_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/material_black"
        android:text="月销量" />


    <!--库存成本价-->
    <TextView
        android:id="@+id/tv_buyprice"
        style="@style/mfh_form_content_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/material_black"
        android:text="成本价"/>


    <LinearLayout
        android:id="@+id/ll_costprice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_costprice"
            style="@style/mfh_form_content_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/ic_marker_edit"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/material_black"
            android:text="零售价" />
    </LinearLayout>



    <ImageButton
        android:id="@+id/ib_order_goods"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_shopcart_add_large"/>

</LinearLayout>
