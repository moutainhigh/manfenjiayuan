<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mf_simple_dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/dialogview_headerview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mf_simple_dialog_height"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_huge">

        <com.bingshanguxue.vector_uikit.widget.AvatarView
            android:id="@+id/iv_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/chat_tmp_user_head" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text=""
            style="@style/singleline_text"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_password"
            style="@style/mfh_edittext_normal"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:layout_marginTop="32dp"
            android:hint="@string/hint_input_password"
            android:inputType="textPassword" />
    </LinearLayout>

    <!--按键-->
    <include layout="@layout/view_dialog_footer" />

</LinearLayout>