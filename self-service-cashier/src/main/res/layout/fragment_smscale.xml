<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_micro"
            android:text="192.168.18.60:21"
            android:textColor="@color/material_black"/>


        <Button
            android:id="@+id/button_write_csv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Write CSV"
            android:textColor="#000000"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/button_write_csv_encoding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Write CSV Encoding"
            android:textColor="#000000"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/button_bean2csv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Bean 2 CSV"
            android:textColor="#000000"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/button_csv2bean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="CSV 2 Bean"
            android:textColor="#000000"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/button_read_csv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Read CSV"
            android:textColor="#000000"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/button_upload2ftp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Upload 2 FTP"
            android:textColor="#000000"
            android:textStyle="normal"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
