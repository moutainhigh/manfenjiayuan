<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:divider="@drawable/divider_vertical_line_primary"
              android:orientation="horizontal"
              android:showDividers="middle">

    <!--导航-->
    <com.mfh.framework.uikit.widget.SideSlidingTabStrip
        android:id="@+id/left_settings_tab"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:background="@color/material_white"
        app:allowWidthFull="true"
        app:slidingBlock="@null"/>

    <!--内容区-->
    <com.mfh.framework.uikit.widget.CustomViewPager
        android:id="@+id/settings_viewpager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/material_white"/>

</LinearLayout>
