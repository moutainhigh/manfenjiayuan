<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/appbar"/>

    <!--会员信息-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mfhtheme_maskPrimary"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_double">

        <!--&lt;!&ndash;用户信息：用户名/手机号&ndash;&gt;-->
        <!--<TextView-->
            <!--android:id="@+id/tv_vip_brief"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/spacing_normal"-->
            <!--android:text=":"-->
            <!--android:textColor="@color/material_black"-->
            <!--android:textSize="@dimen/textsize_normal"/>-->

        <!--头像-->
        <com.bingshanguxue.vector_uikit.widget.AvatarView
            android:id="@+id/iv_vip_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/chat_tmp_user_head"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <!--&lt;!&ndash;头像&ndash;&gt;-->
    <!--<com.bingshanguxue.vector_uikit.widget.AvatarView-->
        <!--android:id="@+id/iv_vip_header"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_marginBottom="@dimen/spacing_double"-->
        <!--android:layout_marginTop="@dimen/spacing_double"-->
        <!--android:src="@drawable/chat_tmp_user_head"/>-->

    <!--<include-->
    <!--android:id="@+id/view_vip_brief"-->
    <!--layout="@layout/include_cashier_pay_header_1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="130dp"/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="0dp"
        android:background="#D2D2D2"/>

    <!--商品金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mfhtheme_maskPrimary"
        android:baselineAligned="false"
        android:divider="@drawable/divider_vertical_line_primary"
        android:dividerPadding="12dp"
        android:gravity="center"
        android:padding="12dp"
        android:showDividers="middle">
        <!--订单金额-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelHandleAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="订单金额"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/material_black"
            app:topTextSize="30sp"/>
        <!--会员优惠-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelRuleDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="会员优惠"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>
        <!--促销优惠-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelPromotion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="@string/label_promotion_discount"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>

        <!--代金券-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelCouponDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="代金券"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>
        <!--积分-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="积分"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>

        <!--应付金额-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelDealPayAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="应付金额"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="#FE5000"
            app:topTextSize="30sp"/>

    </LinearLayout>

    <!--优惠券-->
    <RelativeLayout
        android:id="@+id/frame_coupon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/material_white"
        android:orientation="vertical">

        <com.mfh.framework.uikit.recyclerview.RecyclerViewEmptySupport
            android:id="@+id/coupon_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"/>

        <!--空视图-->
        <ImageView
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@mipmap/ic_no_coupon_data"/>
    </RelativeLayout>

    <Button
        android:id="@+id/button_submit"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/btn_rectange_primary"
        android:gravity="center"
        android:text="支付"
        android:textColor="@color/material_white"
        android:textSize="24sp"/>


</LinearLayout>

