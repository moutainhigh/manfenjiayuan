<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_white"
                android:baselineAligned="false"
                android:divider="@drawable/divider_vertical_line_primary"
                android:orientation="vertical"
                android:showDividers="middle">

    <!--商品显示区域-->
    <com.mfh.framework.uikit.recyclerview.RecyclerViewEmptySupport
        android:id="@+id/goodsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--空视图-->
    <TextView
        android:id="@+id/empty_view"
        style="@style/mfh_textview_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:text="未找到商品"/>

    <ProgressBar
        android:id="@+id/animProgress"
        style="@style/loading"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_marginTop="@dimen/spacing_3x"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/mfhtheme_maskPrimary">

        <com.mfh.litecashier.ui.widget.InputNumberLabelView
            android:id="@+id/inlv_barcode"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_toStartOf="@+id/ib_enter"
            app:editBackground="@drawable/bg_input_black"
            app:editFocusable="false"
            app:editFocusableInTouchMode="false"
            app:editInputType="text"
            app:editTextColor="@color/material_white"
            app:editTextColorHint="@color/material_white_800"
            app:editTextSize="40sp"
            app:inputHint="商品名首字母"
            app:rightButtonWidth="90dp"
            app:rightImageButtonSrc="@mipmap/ic_arrow_down"/>

        <ImageButton
            android:id="@+id/ib_enter"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/spacing_3x"
            android:background="@color/material_orange_500"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_key_enter"/>

        <!--字符输入区域-->
        <com.mfh.framework.uikit.recyclerview.RecyclerViewEmptySupport
            android:id="@+id/letterRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_below="@+id/inlv_barcode"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/fab_toggle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/spacing_3x"
        android:layout_marginEnd="@dimen/spacing_double"
        android:background="@drawable/bg_fab_circle_green"
        android:contentDescription="@null"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_arrow_up"/>

</RelativeLayout>
