<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <include layout="@layout/appbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_white"
        android:baselineAligned="false"
        android:divider="@drawable/divider_vertical_line_primary"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--商品显示区域-->
            <com.mfh.framework.uikit.recyclerview.RecyclerViewEmptySupport
                android:id="@+id/goodsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!--空视图-->
            <TextView
                android:id="@+id/empty_view"
                style="@style/mfh_textview_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text="未找到商品"/>

        </RelativeLayout>

        <com.mfh.litecashier.ui.widget.InputNumberLabelView
            android:id="@+id/inlv_barcode"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            app:editBackground="@drawable/bg_input_black"
            app:editInputType="text"
            app:inputNumberLabelView_inputHint="@string/hint_product_barcode"
            app:editTextColor="@color/material_white"
            app:inputNumberLabelView_inputTextColorHint="@color/black_35"
            app:inputNumberLabelView_rightImageButtonSrc="@mipmap/ic_key_enter"/>

        <!--字符输入区域-->
        <com.mfh.framework.uikit.recyclerview.RecyclerViewEmptySupport
            android:id="@+id/letterRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="540dp"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
