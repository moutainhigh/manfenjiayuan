<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:divider="@drawable/divider_vertical_line_primary"
    android:showDividers="middle"
    android:background="@color/material_white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:divider="@drawable/divider_horizontal_line_primary"
        android:showDividers="middle"
        android:layout_weight="1">
        <!--导航-->
        <com.bingshanguxue.vector_uikit.slideTab.TopSlidingTabStrip
            android:id="@+id/tab_category_goods"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/material_white"
            app:allowWidthFull="false"
            app:slidingBlock="@drawable/slidingblock_white_greenline" />
        <include
            android:id="@+id/ll_procuct_header"
            layout="@layout/itemview_backendcategory_goods_header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <!--内容区-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_category_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/letter_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>
