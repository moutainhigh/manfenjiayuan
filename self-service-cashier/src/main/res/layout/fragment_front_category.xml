<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include layout="@layout/appbar"/>-->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mfh_toolbar_background"
        android:orientation="vertical"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!--app:layout_scrollFlags="scroll|enterAlways|snap"-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/mfh_toolbar_background"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.bingshanguxue.vector_uikit.widget.NaviAddressView
                android:id="@+id/addressView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:endSrcVisible="true"
                app:startSrcVisible="true"
                app:text="请选择商品库"
                app:textColor="@color/material_white"
                app:textColorHint="@color/material_white"
                app:textSize="14sp"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:divider="@drawable/divider_horizontal_line_primary"
        android:showDividers="middle"
        android:background="@color/material_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <!--导航-->
        <com.bingshanguxue.vector_uikit.slideTab.TopSlidingTabStrip
            android:id="@+id/tab_category_goods"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/material_white"
            app:allowWidthFull="false"
            app:slidingBlock="@drawable/slidingblock_white_greenline" />

        <!--内容区-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_category_goods"
            android:layout_width="match_parent"
            android:background="@color/material_white"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
