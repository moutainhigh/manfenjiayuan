<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="536dp"
    android:padding="32dp">

    <com.mfh.framework.uikit.widget.AvatarView
        android:id="@+id/iv_header"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/chat_tmp_user_head"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:textSize="18sp"
        android:textColor="@color/material_black"
        android:gravity="center"
        android:padding="16dp"/>

    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">
        <!--锁定-->
        <Button
            android:id="@+id/button_lock"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/button_lock"
            style="@style/mfh_button_text"
            android:gravity="center"
            android:background="@drawable/btn_rectange_green"/>


        <!--交接班-->
        <Button
            android:id="@+id/button_handover"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/button_handover"
            style="@style/mfh_button_text"
            android:gravity="center"
            android:background="@drawable/btn_rectange_green"
            android:layout_marginTop="16dp"/>

        <!--退出-->
        <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/button_logout"
            style="@style/mfh_button_text"
            android:gravity="center"
            android:background="@drawable/btn_rectange_red"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</LinearLayout>