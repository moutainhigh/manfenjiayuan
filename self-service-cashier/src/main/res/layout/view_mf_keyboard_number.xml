<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_mf_pay_keyboard"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:divider="@drawable/divider_horizontal_line_primary"
              android:orientation="vertical"
              android:showDividers="beginning|middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:divider="@drawable/divider_vertical_line_primary"
        android:showDividers="middle">

        <Button
            android:id="@+id/key_1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="1"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/key_2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="2"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/key_3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="3"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:divider="@drawable/divider_vertical_line_primary"
        android:showDividers="middle">

        <Button
            android:id="@+id/key_4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="4"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/key_5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="5"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/key_6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="6"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:divider="@drawable/divider_vertical_line_primary"
        android:showDividers="middle">

        <Button
            android:id="@+id/key_7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="7"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/key_8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="8"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/key_9"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="9"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:divider="@drawable/divider_vertical_line_primary"
        android:showDividers="middle">

        <ImageButton
            android:id="@+id/key_dot"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:contentDescription="@null"
            android:src="@mipmap/ic_keyboard_dot"/>

        <Button
            android:id="@+id/key_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:text="0"
            android:textColor="@color/material_black"
            android:textSize="24sp"/>

        <ImageButton
            android:id="@+id/key_del"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_keyboard_item"
            android:contentDescription="@null"
            android:src="@mipmap/ic_keyboard_del"/>
    </LinearLayout>

</LinearLayout>
