<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/appbar"/>

    <!--会员信息-->
    <com.mfh.litecashier.ui.widget.CustomerView
        android:id="@+id/customer_view"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="0dp"
        android:background="#D2D2D2"/>

    <!--商品金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mfhtheme_maskPrimary"
        android:baselineAligned="false"
        android:divider="@drawable/divider_vertical_line_primary"
        android:dividerPadding="12dp"
        android:gravity="center"
        android:padding="12dp"
        android:showDividers="middle">
        <!--订单金额-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelHandleAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="订单金额"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/material_black"
            app:topTextSize="30sp"/>
        <!--会员优惠-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelRuleDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="会员优惠"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>
        <!--促销优惠-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelPromotion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="@string/label_promotion_discount"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>

        <!--代金券-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelCouponDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="代金券"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>
        <!--积分-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="积分"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="@color/colorPrimary"
            app:topTextSize="30sp"/>

        <!--应付金额-->
        <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
            android:id="@+id/labelDealPayAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bottomText="应付金额"
            app:bottomTextColor="@color/black_70"
            app:bottomTextSize="16sp"
            app:topText="0.00"
            app:topTextColor="#FE5000"
            app:topTextSize="30sp"/>

    </LinearLayout>

    <!--优惠券-->
    <RelativeLayout
        android:id="@+id/frame_coupon"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/mfhtheme_maskPrimary"
        android:orientation="vertical">

        <com.mfh.framework.uikit.recyclerview.RecyclerViewEmptySupport
            android:id="@+id/coupon_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"/>

        <!--空视图-->
        <ImageView
            android:id="@+id/empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@mipmap/ic_no_coupon_data"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="0dp"
        android:background="#D2D2D2"/>

    <!--支付-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/material_white"
        android:divider="@drawable/divider_horizontal_line_primary"
        android:orientation="vertical"
        android:showDividers="middle">
        <!--导航-->
        <com.bingshanguxue.vector_uikit.slideTab.TopSlidingTabStrip
            android:id="@+id/tabstrip_pay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:allowWidthFull="true"
            app:slidingBlock="@drawable/slidingblock_white_greenline"/>
        <!--内容区-->
        <com.mfh.framework.uikit.widget.CustomViewPager
            android:id="@+id/tab_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/fab_give"
        style="@style/FloatImageButton"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/spacing_3x"
        android:layout_marginEnd="@dimen/spacing_double"
        android:contentDescription="@null"
        android:src="@mipmap/ic_fab_give"
        android:visibility="gone"/>

</LinearLayout>

