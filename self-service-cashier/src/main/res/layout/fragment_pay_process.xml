<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@color/material_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_countdown"
        style="@style/singleline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="0秒"
        android:textColor="@color/material_green_500"
        android:textSize="64sp"
        />

    <LinearLayout
        android:id="@+id/ll_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/animProgress"
            style="@style/loading"
            android:layout_width="30dip"
            android:layout_height="30dip"/>

        <TextView
            android:id="@+id/tv_process"
            style="@style/mfh_textview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="正在发起支付请求"
            android:textColor="@color/black_60"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal">


        <Button
            android:id="@+id/button_action1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_hollow_green"
            android:text="重新支付"
            android:textColor="@color/black_65"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button_action2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_hollow_green"
            android:text="查询订单"
            android:layout_marginStart="@dimen/spacing_double"
            android:textColor="@color/black_65"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button_action3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_double"
            android:background="@drawable/btn_hollow_red"
            android:text="撤销订单"
            android:textColor="@color/black_65"
            android:textSize="16sp"/>


    </LinearLayout>

</LinearLayout>