<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_white"
                android:baselineAligned="false"
                android:orientation="vertical">

    <include
        android:id="@+id/frame_top"
        layout="@layout/dialogview_headerview"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame_top"
        android:orientation="vertical"
        >
        <!--会员信息-->
        <com.mfh.litecashier.ui.widget.CustomerView
            android:id="@+id/customer_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="0dp"
            android:background="#D2D2D2"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/amountRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            android:background="@color/mfhtheme_maskPrimary"/>

        <LinearLayout
            android:id="@+id/ll_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_white"
            android:divider="@drawable/divider_horizontal_line_primary"
            android:orientation="vertical"
            android:showDividers="middle">
            <!--导航-->
            <com.bingshanguxue.vector_uikit.slideTab.TopSlidingTabStrip
                android:id="@+id/tabstrip_pay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:allowWidthFull="true"
                app:slidingBlock="@drawable/slidingblock_white_greenline"/>
            <!--内容区-->
            <com.mfh.framework.uikit.widget.CustomViewPager
                android:id="@+id/tab_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
