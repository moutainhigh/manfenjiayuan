<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_pay_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <!--授权码-->
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="44dp"
            android:layout_margin="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_barcode_tag"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="授权码"
                android:textColor="@color/black_70"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_barCode"
                style="@style/mfh_edittext_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="请扫描授权码"
                android:inputType="textPassword"/>

            <!--<com.bingshanguxue.vector_uikit.widget.EditLabelView-->
                <!--android:id="@+id/et_barCode"-->
                <!--style="@style/mfh_editlabelview"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="48dp"-->
                <!--android:layout_margin="@dimen/spacing_double"-->
                <!--app:editInputType="textPassword"-->
                <!--app:editTextHint="请扫描授权码"-->
                <!--app:editTextSize="18sp"-->
                <!--android:visibility="visible"-->
                <!--app:startText="授权码"-->
                <!--app:startTextColor="@color/black_70"-->
                <!--app:startTextSize="18sp"-->
                <!--app:startTextWidth="72dp"/>-->
        </LinearLayout>
    </LinearLayout>


    <com.mfh.litecashier.ui.widget.PayProcessView
        android:id="@+id/payProcessView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
