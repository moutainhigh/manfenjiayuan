<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="@dimen/mf_simple_dialog_width"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/dialogview_headerview"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.mfh.litecashier.ui.widget.CustomerView
            android:id="@+id/customer_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/frame_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_below="@+id/customer_view"
            android:orientation="vertical"
            android:padding="@dimen/spacing_double">

            <com.bingshanguxue.vector_uikit.widget.EditLabelView
                android:id="@+id/label_cardnumber"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                app:editInputType="text"
                app:editTextColor="@color/material_black"
                app:editTextHint="请输入卡面号"
                app:editTextSize="16sp"
                app:endTextVisible="true"
                app:softKeyboardEnabled="true"
                app:startText="卡面号:"
                app:startTextColor="@color/material_black"
                app:startTextGravity="end"
                app:startTextSize="16sp"
                app:startTextWidth="80dp"/>

            <com.bingshanguxue.vector_uikit.widget.EditLabelView
                android:id="@+id/label_cardid"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                app:editInputType="text"
                app:editTextColor="@color/material_black"
                app:editTextHint="请将焦点定位到输入框并刷卡"
                app:editTextSize="16sp"
                app:endTextVisible="true"
                app:softKeyboardEnabled="true"
                app:startText="芯片号:"
                app:startTextColor="@color/material_black"
                app:startTextGravity="end"
                app:startTextSize="16sp"
                app:startTextWidth="80dp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/animProgress"
            style="@style/loading"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <!--按键-->
    <include layout="@layout/view_dialog_footer"/>

</LinearLayout>