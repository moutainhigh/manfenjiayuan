<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">


    <include layout="@layout/appbar"/>

    <!--目标商品列表-->
    <RelativeLayout
        android:id="@+id/frame_dest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <!--空视图-->
        <ImageView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/emptyimage_no_goods"/>

        <!--订单列表-->
        <com.mfh.framework.uikit.recyclerview.RecyclerViewEmptySupport
            android:id="@+id/office_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!--结算-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_submit"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/spacing_double"
            android:src="@mipmap/ic_fab_submit"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:rippleColor="@color/material_green_800"/>

    </RelativeLayout>

    <!--商品基本信息-->
    <RelativeLayout
        android:id="@+id/frame_src"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/label_barcode"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:startText="商品条码:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/label_productName"
            style="@style/mfh_textlabelview"
            android:layout_below="@+id/label_barcode"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:startText="商品名称:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.EditLabelView
            android:id="@+id/label_receive_quantity"
            style="@style/mfh_editlabelview"
            android:layout_below="@+id/label_productName"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:editInputType="numberDecimal"
            app:editTextHint="请输入签收数量"
            app:endTextVisible="true"
            app:softKeyboardEnabled="true"
            app:startText="签收数量:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.EditLabelView
            android:id="@+id/label_receive_amount"
            style="@style/mfh_editlabelview"
            android:layout_below="@+id/label_receive_quantity"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:editInputType="numberDecimal"
            app:editTextHint="请输入收货金额"
            app:endTextVisible="true"
            app:softKeyboardEnabled="true"
            app:startText="收货金额:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <!--结算-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_convert"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/spacing_double"
            android:src="@mipmap/ic_fab_submit"
            app:backgroundTint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:rippleColor="@color/material_green_800"/>

    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
