<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/material_white"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">


        <TextView
            android:id="@+id/tv_orderName"
            style="@style/mfh_textview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="报损单名称"/>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_createDate"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_orderName"
            app:startText="盘点时间:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_net"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_createDate"
            app:startText="网点:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_orderstatus"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_net"
            app:startText="状态:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
