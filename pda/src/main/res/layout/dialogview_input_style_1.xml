<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/contentview_dialog_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="bottom|center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint=""
            android:inputType="numberDecimal"
            android:maxLines="2"
            android:singleLine="false"
            android:padding="16dp"
            android:textColor="#FE5000"
            android:textColorHint="@color/black_35"
            android:textIsSelectable="false"
            android:textSize="48sp"/>

        <TextView
            android:id="@+id/tv_endText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxWidth="48dp"
            android:padding="@dimen/spacing_micro"
            android:text=""
            android:textColor="@color/material_black"
            android:textSize="20sp"/>
    </LinearLayout>

    <include
        layout="@layout/view_mf_keyboard_number"
        android:layout_width="match_parent"
        android:layout_height="240dp"/>

    <!--按键-->
    <Button
        android:id="@+id/button_submit"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/btn_rectange_primary"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/material_white"
        android:textSize="24sp"
        android:visibility="visible"/>

</LinearLayout>