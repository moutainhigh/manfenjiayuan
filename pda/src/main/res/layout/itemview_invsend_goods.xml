<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/material_white"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_name"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startText="商品名称:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_barcode"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            app:startText="商品条码:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_quantity"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_barcode"
            app:startText="订货数量:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_price"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_quantity"
            app:startText="价格:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_amount"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            app:startText="小计:"
            app:startTextGravity="end"
            app:startTextWidth="90dp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
