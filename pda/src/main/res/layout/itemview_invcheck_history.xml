<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/material_white"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/tv_name"
                style="@style/mfh_textlabelview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:startText="商品名称:"
                app:startTextGravity="start"
                app:startTextWidth="90dp"/>

            <TextView
                android:id="@+id/tv_sync_status"
                style="@style/mfh_textview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="start|center_vertical"
                android:padding="4dp"
                android:text="同步状态"
                android:textColor="@color/mf_red"/>

            <TextView
                android:id="@+id/tv_update_hint"
                style="@style/mfh_textview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="start|center_vertical"
                android:padding="4dp"
                android:text="状态"/>
        </LinearLayout>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_barcode"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startText="商品条码:"
            app:startTextGravity="start"
            app:startTextWidth="90dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/tv_shelfnumber"
                style="@style/mfh_textlabelview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:startText="区域编号:"
                app:startTextGravity="start"
                app:startTextWidth="90dp"/>

            <TextView
                android:id="@+id/tv_quantity"
                style="@style/mfh_textview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:padding="4dp"
                android:text="盘点数量"/>
        </LinearLayout>

        <com.bingshanguxue.vector_uikit.widget.TextLabelView
            android:id="@+id/tv_createDate"
            style="@style/mfh_textlabelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startText="盘点时间:"
            app:startTextGravity="start"
            app:startTextWidth="90dp"/>


    </LinearLayout>
</android.support.v7.widget.CardView>