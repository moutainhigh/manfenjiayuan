<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--内容区-->
            <!--商品名称-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_productName"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:endTextSingleLine="false"
                app:startText="商品名称:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>
            <!--条码-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_barcodee"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:endTextSingleLine="false"
                app:startText="条码:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>
            <!--库存成本价-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_buyprice"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:endTextSingleLine="false"
                app:startText="库存成本价:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>
            <!--零售价（可编辑）-->
            <com.bingshanguxue.vector_uikit.widget.EditLabelView
                android:id="@+id/label_costPrice"
                style="@style/mfh_editlabelview"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:editInputType="numberDecimal"
                app:editTextHint="请输入零售价格"
                app:startText="零售价:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>
            <!--毛利率-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_grossProfit"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="毛利率:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>
            <!--库存-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_quantity"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:startText="库存:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>
            <!--排面库存（可编辑）-->
            <com.bingshanguxue.vector_uikit.widget.EditLabelView
                android:id="@+id/label_upperLimit"
                style="@style/mfh_editlabelview"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:editInputType="numberDecimal"
                app:editTextHint="请输入排面库存"
                app:startText="排面库存:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>
            <!--平均销量-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_sellNum30"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:endTextSingleLine="false"
                app:startText="30天销量:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>
            <!--7天销量-->
            <com.bingshanguxue.vector_uikit.widget.TextLabelView
                android:id="@+id/label_sellNum7"
                style="@style/mfh_textlabelview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:endTextSingleLine="false"
                app:startText="7天销量:"
                app:startTextGravity="end"
                app:startTextWidth="110dp"/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_double"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <!--扫描-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_scan"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="@dimen/spacing_double"
            android:src="@mipmap/ic_fab_scan"
            app:backgroundTint="@color/mfh_positive_default"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:rippleColor="@color/material_green_800"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_submit"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/ic_fab_submit"
            android:visibility="gone"
            app:backgroundTint="@color/mfh_positive_default"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:rippleColor="@color/material_green_800"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>




