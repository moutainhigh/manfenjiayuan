<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="mf_edittext_text">
        <item name="android:textColor">@color/material_black</item>
        <item name="android:textColorHint">@color/black_35</item>
        <item name="android:background">?android:editTextBackground</item>
    </style>


    <style name="mfh_textview_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_black</item>
    </style>

    <style name="mfh_textlabelview">
        <item name="startTextWidth">120dp</item>
        <item name="startTextSize">12sp</item>
        <item name="startTextColor">@color/black_35</item>
        <item name="endTextSize">12sp</item>
        <item name="endTextColor">@color/material_black</item>
    </style>

    <style name="mfh_editlabelview">
        <item name="startTextWidth">120dp</item>
        <item name="startTextSize">12sp</item>
        <item name="startTextColor">@color/black_35</item>
        <item name="editTextSize">12sp</item>
        <item name="editTextColor">@color/material_black</item>
        <item name="editTextColorHint">@color/black_35</item>
        <item name="endTextSize">12sp</item>
        <item name="endTextColor">@color/material_black</item>
    </style>

    <style name="mf_scrolview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
        <item name="android:measureAllChildren">false</item>
    </style>


</resources>
