<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="isChecked" format="boolean"/>
    <attr name="itemFocusable" format="boolean"/>



    <attr name="startText" format="string|reference"/>
    <attr name="startTextColor" format="reference|color"/>
    <attr name="startTextSize" format="dimension"/>
    <attr name="startTextWidth" format="dimension"/>
    <attr name="startTextGravity">
        <enum name="start" value="0"/>
        <enum name="center" value="1"/>
        <enum name="end" value="2"/>
    </attr>

    <attr name="endText" format="string|reference"/>
    <attr name="endTextColor" format="reference|color"/>
    <attr name="endTextSize" format="dimension"/>
    <attr name="endTextWidth" format="dimension"/>
    <attr name="endTextVisible" format="boolean"/>
    <attr name="endTextSingleLine" format="boolean"/>

    <attr name="editTextColor" format="reference|color"/>
    <attr name="editTextSize" format="dimension"/>
    <attr name="editTextHint" format="string|reference"/>
    <attr name="editBackground" format="reference|color"/>
    <attr name="editTextColorHint" format="reference|color"/>
    <attr name="editFocusable" format="boolean"/>
    <attr name="editFocusableInTouchMode" format="boolean"/>



    <attr name="borderWidth" format="dimension"/>
    <attr name="borderColor" format="reference|color"/>


    <!--是否支持软键盘-->
    <attr name="softKeyboardEnabled" format="boolean"/>
    <attr name="isArrowVisible" format="boolean"/>
    <attr name="isLogoVisible" format="boolean"/>

    <!--图片-->
    <attr name="src" format="reference"/>
    <attr name="logoSrc" format="reference"/>
    <attr name="startSrc" format="reference"/>
    <attr name="startSrcVisible" format="boolean"/>
    <attr name="endSrc" format="reference"/>
    <attr name="endSrcVisible" format="boolean"/>

    
    <!--自定义输入类型 {@link com.bingshanguxue.vector_uikit#EditInputType }-->
    <attr name="editInputType">
        <enum name="text" value="0"/>
        <enum name="numberDecimal" value="1"/>
        <!--条码，［0-9］-->
        <enum name="barcode" value="2"/>
        <!--价格，*\d［0-9].\d{2}-->
        <enum name="price" value="3"/>
        <!--价格，*\d［0-9].\d{2}-->
        <enum name="weight" value="4"/>
        <enum name="textPassword" value="5"/>
        <enum name="phone" value="6"/>
        <enum name="number" value="7"/>
        <enum name="numberPassword" value="8"/>
    </attr>

    <declare-styleable name="SettingsItem">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="subText"/>
        <attr name="subTextColor"/>
        <attr name="subTextSize"/>
        <attr name="subTextGravity"/>
        <attr name="subTextMaxLines"/>
        <attr name="isArrowVisible"/>
        <attr name="isLogoVisible"/>
        <attr name="src"/>
        <attr name="position"/>
    </declare-styleable>
    <declare-styleable name="ToggleSettingItem">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="subText"/>
        <attr name="subTextColor"/>
        <attr name="subTextSize"/>
        <attr name="subTextGravity"/>
        <attr name="subTextMaxLines"/>
        <attr name="position"/>
        <attr name="isLogoVisible"/>
        <attr name="src"/>
    </declare-styleable>

    <declare-styleable name="NumberPickerView">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="increaseDrawable" format="reference"/>
        <attr name="decreaseDrawable" format="reference"/>
        <!--当数字为0时，自动隐藏“－”按钮，默认为fasle-->
        <attr name="decreaseDrawableAutoHide" format="boolean"/>
        <!--数字为0时是是否拦截处理，默认为fasle-->
        <attr name="zeroIntercept" format="boolean"/>
        <attr name="increaseIntercept" format="boolean"/>
        <attr name="decreaseIntercept" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="OptionalLabel">
        <attr name="mLabelView_inputTextColor" format="color"/>
        <attr name="mLabelView_inputTextSize" format="dimension"/>
        <attr name="mLabelView_inputTextColorHint" format="color"/>
        <attr name="mLabelView_inputHint" format="string"/>

        <attr name="mLabelView_rightImageButtonEnabled" format="boolean"/>
        <attr name="mLabelView_rightButtonWidth" format="dimension"/>
        <attr name="mLabelView_rightImageButtonSrc" format="reference"/>
    </declare-styleable>

    <!---->
    <declare-styleable name="TextLabelView">
        <attr name="startText"/>
        <attr name="startTextColor"/>
        <attr name="startTextSize"/>
        <attr name="startTextWidth"/>
        <attr name="startTextGravity"/>

        <attr name="endText"/>
        <attr name="endTextColor"/>
        <attr name="endTextSize"/>
        <attr name="endTextSingleLine"/>
    </declare-styleable>

    <declare-styleable name="EditLabelView">
        <attr name="startText"/>
        <attr name="startTextColor"/>
        <attr name="startTextSize"/>
        <attr name="startTextWidth"/>
        <attr name="startTextGravity"/>

        <attr name="editTextColor"/>
        <attr name="editTextSize"/>
        <attr name="editTextHint"/>
        <attr name="editTextColorHint"/>
        <attr name="editInputType"/>
        <attr name="editBackground"/>
        <attr name="softKeyboardEnabled"/>

        <attr name="endText"/>
        <attr name="endTextColor"/>
        <attr name="endTextSize"/>
        <attr name="endTextVisible"/>
    </declare-styleable>

    <declare-styleable name="MultiLayerLabel">
        <attr name="topText" format="string|reference"/>
        <attr name="topTextColor" format="reference|color"/>
        <attr name="topTextSize" format="dimension"/>
        <attr name="bottomText" format="string|reference"/>
        <attr name="bottomTextColor" format="reference|color"/>
        <attr name="bottomTextSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="ProfileView">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="subText"/>
        <attr name="subTextColor"/>
        <attr name="subTextSize"/>
        <attr name="src"/>
        <attr name="borderWidth"/>
        <attr name="borderColor"/>
        <attr name="endArrowVisible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="NaviAddressView">
        <attr name="startText"/>
        <attr name="startTextColor"/>
        <attr name="startTextSize"/>
        <attr name="startTextWidth"/>
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="hint"/>
        <attr name="textColorHint"/>
        <attr name="startSrc"/>
        <attr name="startSrcVisible"/>
        <attr name="endSrc"/>
        <attr name="endSrcVisible"/>
    </declare-styleable>

    <!--条码搜索控件-->
    <declare-styleable name="ScanBar">
        <attr name="logoSrc"/>
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="textColorHint"/>
        <attr name="hint"/>
        <attr name="editInputType"/>
        <attr name="action1Enabled" format="boolean"/>
        <attr name="softKeyboardEnabled"/>
    </declare-styleable>
    <!--圆角ImageView-->
    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension"/>
        <attr name="borderWidth"/>
        <attr name="borderColor"/>
        <attr name="mutate_background" format="boolean"/>
        <attr name="oval" format="boolean"/>
        <attr name="android:scaleType"/>
    </declare-styleable>
    <!--圆形ImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="borderWidth"/>
        <attr name="borderColor"/>
        <attr name="border_overlay" format="boolean"/>
    </declare-styleable>


</resources>