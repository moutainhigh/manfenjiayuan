<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="startText" format="string|reference"/>
    <attr name="startTextColor" format="reference|color"/>
    <attr name="startTextSize" format="dimension"/>
    <attr name="startTextWidth" format="dimension"/>

    <attr name="endText" format="string|reference"/>
    <attr name="endTextColor" format="reference|color"/>
    <attr name="endTextSize" format="dimension"/>
    <attr name="endTextWidth" format="dimension"/>
    <attr name="endTextVisible" format="boolean" />
    <attr name="endTextSingleLine" format="boolean" />

    <attr name="editTextColor" format="reference|color"/>
    <attr name="editTextSize" format="dimension"/>
    <attr name="editTextHint" format="string|reference"/>
    <attr name="editTextColorHint" format="reference|color" />

    <!--图片-->
    <attr name="src" format="reference"/>


    <!--自定义输入类型 {@link com.bingshanguxue.vector_uikit.EditInputType }-->
    <attr name="editInputType">
        <enum name="text" value="0"/>
        <enum name="numberDecimal" value="1"/>
        <!--条码，［0-9］-->
        <enum name="barcode" value="2"/>
        <!--价格，*\d［0-9].\d{2}-->
        <enum name="price" value="3"/>
    </attr>

    <attr name="isArrowVisible" format="boolean"/>
    <attr name="isLogoVisible" format="boolean"/>


    <declare-styleable name="SettingsItem">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="subText"/>
        <attr name="subTextColor"/>
        <attr name="subTextSize"/>
        <attr name="subTextGravity"/>
        <attr name="subTextMaxLines"/>
        <attr name="isArrowVisible"/>
        <attr name="isLogoVisible"/>
        <attr name="src"/>
        <attr name="position"/>
    </declare-styleable>
    <declare-styleable name="ToggleSettingItem">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="subText"/>
        <attr name="subTextColor"/>
        <attr name="subTextSize"/>
        <attr name="subTextGravity"/>
        <attr name="subTextMaxLines"/>
        <attr name="position"/>
        <attr name="isLogoVisible"/>
        <attr name="src"/>
    </declare-styleable>

    <declare-styleable name="NumberPickerView">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="increaseDrawable" format="reference"/>
        <attr name="decreaseDrawable" format="reference"/>
        <!--当数字为0时，自动隐藏“－”按钮，默认为fasle-->
        <attr name="decreaseDrawableAutoHide" format="boolean"/>
        <!--数字为0时是是否拦截处理，默认为fasle-->
        <attr name="zeroIntercept" format="boolean"/>
    </declare-styleable>

</resources>