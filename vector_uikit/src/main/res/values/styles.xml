<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MfhNoActionBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->

        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/material_white</item>
        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/material_white</item>
        <item name="android:windowBackground">@color/windowBackground</item>


        <item name="android:editTextBackground">@drawable/mfhtheme_edit_text_holo_light</item>
        <item name="android:textSelectHandleLeft">@drawable/mfhtheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/mfhtheme_text_select_handle_right
        </item>
        <item name="android:textSelectHandle">@drawable/mfhtheme_text_select_handle_middle</item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/mfhtheme_list_selector_holo_light
        </item>
        <item name="android:fastScrollThumbDrawable">@drawable/mfhtheme_fastscroll_thumb_holo</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/mfhtheme_btn_check_holo_light
        </item>

        <item name="android:textSize">16sp</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="android:actionBarTabStyle">@style/ActionBarStyle.Tab</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarStyle.TabBar</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarStyle.TabText</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:dropDownSpinnerStyle">@style/dropDownSpinnerStyle</item>


        <!--窗口进入和退出动画-->
        <item name="android:windowAnimationStyle">@style/activity_right_fade_in_out</item>

        <!--RecyclerView分割线-->
        <item name="itemdecoration_line">@drawable/listdivider_horizontal</item>
        <!--<item name="android:listDivider">@drawable/divider_vertical_line</item>-->

        <!--<item name="android:colorControlNormal">@color/mf_colorPrimary</item>-->
        <!--<item name="android:colorControlActivated">@color/mf_colorPrimary</item>-->
        <!--<item name="android:colorControlHighlight">@color/mf_colorPrimary</item>-->
    </style>

    <!-- application theme 日间模式 -->
    <style name="AppBaseTheme_Light" parent="MfhNoActionBarAppTheme">
        <!-- customize the color palette -->

        <!--<item name="android:colorControlNormal">@color/mf_colorPrimary</item>-->
        <!--<item name="android:colorControlActivated">@color/mf_colorPrimary</item>-->
        <!--<item name="android:colorControlHighlight">@color/mf_colorPrimary</item>-->

    </style>

    <style name="NewFlow" parent="AppBaseTheme_Light">
        <item name="android:windowAnimationStyle">@style/anim_bottom_in</item>
    </style>


    <style name="dropDownSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <!--<item name="android:background">@drawable/abc_spinner_mtrl_am_alpha</item>-->
        <!--<item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>-->
        <!--<item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>-->
        <item name="android:background">@drawable/mfhtheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/mfhtheme_list_selector_holo_light</item>
    </style>

    <style name="checkBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/material_black_hint</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!-- 加载滚动条样式 -->
    <style name="syncbutton_progressbar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/syncdata_progressbar</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="M_Widget_ProgressBar_Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/mfh_progress_horizontal</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="ActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#383838</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.TitleText</item>
        <item name="android:subtitleTextStyle">@style/ActionBarStyle.SubTitleText</item>
    </style>

    <style name="ActionBarStyle.TitleText" parent="">
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionBarStyle.SubTitleText">
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActionBarStyle.Tab" parent="android:Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/action_bar_tab_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActionBarStyle.TabBar" parent="android:Widget.Holo.ActionBar.TabBar">
        <item name="android:background">#f0f0f0</item>
        <item name="android:showDividers">none</item>
    </style>

    <style name="ActionBarStyle.TabText" parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/action_bar_tab_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--android:Widget.Holo.Light.Button-->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/comn_button_default</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ButtonFlatStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/comn_button_flat</item>
    </style>

    <style name="ButtonWarningStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/comn_button_warning</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ButtonAcceptStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/comn_button_accept</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ButtonTelephone" parent="ButtonStyle">
        <item name="android:background">#ffffb25c</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ButtonMessage" parent="ButtonStyle">
        <item name="android:background">#ffff874b</item>
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>