<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:exitFadeDuration="0">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!--<stroke android:color="@color/mf_dividerColorPrimary" android:width="1px" />-->
            <solid android:color="@color/transparent"/>
            <corners android:radius="@dimen/spacing_micro"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/material_grey_500"/>
            <solid android:color="@color/bg_touch"/>
            <corners android:radius="@dimen/spacing_micro"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/material_grey_500"/>
            <solid android:color="@color/bg_touch"/>
            <corners android:radius="@dimen/spacing_micro"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/material_grey_500"/>
            <solid android:color="@color/material_white"/>
            <corners android:radius="@dimen/spacing_micro"/>
        </shape>
    </item>

</selector>
