<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:padding="@dimen/spacing_normal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_input_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacing_micro"
            android:layout_marginStart="@dimen/spacing_normal"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@mipmap/ic_scan_barcode"/>

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/iv_logo"
            android:layout_toStartOf="@+id/iv_del"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint=""
            android:text=""
            android:inputType="numberDecimal"
            android:paddingEnd="@dimen/spacing_micro"
            android:paddingStart="@dimen/spacing_normal"
            android:textColor="@color/material_black"
            android:textColorHint="@color/black_35"
            android:textSize="14sp"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacing_micro"
            android:layout_marginStart="@dimen/spacing_normal"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@mipmap/ic_del_oval"
            android:visibility="invisible"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_action_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_double"
        android:layout_marginStart="@dimen/spacing_double"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@mipmap/ic_toolbar_search_white"/>
</LinearLayout>
