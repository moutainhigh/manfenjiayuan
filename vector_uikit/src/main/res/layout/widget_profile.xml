<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.bingshanguxue.vector_uikit.widget.AvatarView
        android:id="@+id/iv_header"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/spacing_double"
        android:src="@drawable/chat_tmp_user_head"/>

    <ImageView
        android:id="@+id/iv_arrow_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/spacing_normal"
        android:contentDescription="@null"
        android:src="@mipmap/icon_arrow_right"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_header">

        <TextView
            android:id="@+id/tv_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冰珊孤雪"
            android:textColor="@color/material_white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_primary"
            android:layout_marginTop="@dimen/spacing_micro"
            android:alpha="0.8"
            android:text="15250065084"
            android:textColor="@color/material_white"
            android:textSize="14sp"/>
    </RelativeLayout>

</RelativeLayout>