<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/frame_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="欢迎！"
            android:textColor="@color/material_white"
            android:textSize="32sp"/>

        <LinearLayout
            android:id="@+id/frame_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/spacing_8x"
            android:background="@drawable/btn_corner_white"
            android:divider="@drawable/divider_horizontal_line"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_double">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingStart="@dimen/spacing_normal"
                    android:textColor="@color/material_black"
                    android:textColorHint="@color/black_35"
                    android:textSize="14sp"/>

                <ImageButton
                    android:id="@+id/ib_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:padding="@dimen/spacing_normal"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_cancel_black_24dp"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:divider="@drawable/divider_vertical_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_double"
                android:showDividers="middle">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入收到的验证码"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingStart="@dimen/spacing_normal"
                    android:textColor="@color/material_black"
                    android:textColorHint="@color/black_35"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/button_sms"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:background="@null"
                    android:paddingEnd="@dimen/spacing_normal"
                    android:paddingStart="@dimen/spacing_normal"
                    android:text="获取验证码"
                    android:textColor="@color/material_light_blue_500"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_sign_in"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_signin"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_corner_white"
            android:padding="@dimen/spacing_micro"
            android:text="一键登录"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_sign_in"
            android:layout_marginTop="16dp"
            android:divider="@drawable/divider_vertical_line"
            android:dividerPadding="8dp"
            android:gravity="center_horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_retrievePwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/button_login_retrieve_pwd"
                android:textColor="@color/white_60"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/button_login_signup"
                android:textColor="@color/white_60"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_double"
        android:layout_marginTop="32dp"
        android:contentDescription="@null"
        android:src="@mipmap/mf_logo_small_white"/>
</RelativeLayout>
