    <include layout="@layout/appbar"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_material_light"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--个人信息-->
            <com.bingshanguxue.vector_uikit.ProfileView
                android:id="@+id/profileView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/mfh_colorPrimary"
                app:textColor="@color/material_white"
                app:textSize="16sp"
                app:subTextSize="16sp"
                app:subTextColor="@color/material_white"/>

            <!--余额/会员积分/我的收藏-->
            <LinearLayout
                android:id="@+id/ll_second"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:divider="@drawable/divider_vertical_line"
                android:dividerPadding="@dimen/spacing_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_micro"
                android:showDividers="middle">

                <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                    android:id="@+id/item_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="余额"
                    app:bottomTextColor="@color/black_70"
                    app:bottomTextSize="12sp"
                    app:topText="￥ 0.00"
                    app:topTextColor="#FF4081"
                    app:topTextSize="26sp"/>

                <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                    android:id="@+id/item_redpacket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="红包"
                    app:bottomTextColor="@color/black_70"
                    app:bottomTextSize="12sp"
                    app:topText="￥ 0.00"
                    app:topTextColor="#FE5000"
                    app:topTextSize="26sp"/>

                <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                    android:id="@+id/item_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="积分"
                    app:bottomTextColor="@color/black_70"
                    app:bottomTextSize="12sp"
                    app:topText="￥ 0.00"
                    app:topTextColor="@color/mfh_colorPrimary"
                    app:topTextSize="26sp"/>

            </LinearLayout>


            <!--订单-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="top"
                app:src="@mipmap/icon_orders_normal"
                app:subText=""
                app:text="订单"/>
            <!--购物车-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_shopcart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="center"
                app:src="@mipmap/icon_orders_normal"
                app:subText=""
                app:text="购物车"/>
            <!--收货地址-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_recvaddr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="bottom"
                app:src="@mipmap/icon_orders_normal"
                app:subText=""
                app:text="收货地址"/>

            <!--充值-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_topup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="top"
                app:src="@mipmap/ic_topup_normal"
                android:layout_marginTop="@dimen/spacing_double"
                app:subText=""
                app:text="充值"/>
            <!--会员卡-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="bottom"
                app:src="@mipmap/ic_card_normal"
                app:subText=""
                app:text="会员卡"/>

            <!--门店-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_store"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                android:layout_marginTop="@dimen/spacing_double"
                app:position="top"
                app:src="@mipmap/ic_store_normal"
                app:subText=""
                app:text="门店"/>
            <!--反馈-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="center"
                app:src="@mipmap/ic_feedback_normal"
                app:subText="吐槽"
                app:text="反馈"/>

            <!--米西合伙人-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_parters"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="bottom"
                app:src="@mipmap/icon_mfhpartner_normal"
                app:subText="马上加入"
                app:text="米西合伙人"/>


            <!--客服中心-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_customer_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                android:layout_marginTop="@dimen/spacing_double"
                app:text="@string/label_settings_customer_center"
                app:position="top"/>

            <!--设置-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="bottom"
                app:src="@mipmap/icon_mfhpartner_normal"
                app:subText=""
                app:text="设置"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
