<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collaps_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!--顶部背景图片-->
            <ImageView
                android:id="@+id/iv_background_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@color/mfh_colorPrimary"
                android:contentDescription=""/>


            <!--app:layout_scrollFlags="scroll|enterAlways|snap"-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <android.support.v7.widget.ButtonBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">

                    <ImageView
                        android:id="@+id/iv_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/spacing_normal"
                        android:contentDescription=""
                        android:src="@mipmap/ic_settings"/>

                </android.support.v7.widget.ButtonBarLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--个人信息-->
            <com.bingshanguxue.vector_uikit.ProfileView
                android:id="@+id/profileView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:background="@color/mfh_colorPrimary"/>

            <!--余额/会员积分/我的收藏-->
            <LinearLayout
                android:id="@+id/ll_second"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:divider="@drawable/divider_vertical_line"
                android:dividerPadding="@dimen/spacing_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_micro"
                android:showDividers="middle">

                <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                    android:id="@+id/item_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="余额"
                    app:bottomTextColor="@color/black_70"
                    app:bottomTextSize="12sp"
                    app:topText="￥ 0.00"
                    app:topTextColor="#FF4081"
                    app:topTextSize="26sp"/>

                <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                    android:id="@+id/item_redpacket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="红包"
                    app:bottomTextColor="@color/black_70"
                    app:bottomTextSize="12sp"
                    app:topText="￥ 0.00"
                    app:topTextColor="#FE5000"
                    app:topTextSize="26sp"/>

                <com.bingshanguxue.vector_uikit.widget.MultiLayerLabel
                    android:id="@+id/item_score"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:bottomText="积分"
                    app:bottomTextColor="@color/black_70"
                    app:bottomTextSize="12sp"
                    app:topText="￥ 0.00"
                    app:topTextColor="@color/mfh_colorPrimary"
                    app:topTextSize="26sp"/>

            </LinearLayout>


            <!--订单-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="top"
                app:src="@mipmap/icon_orders_normal"
                app:subText=""
                app:text="订单"/>
            <!--充值-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_topup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="center"
                app:src="@mipmap/ic_topup_normal"
                app:subText=""
                app:text="充值"/>
            <!--会员卡-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="bottom"
                app:src="@mipmap/ic_card_normal"
                app:subText=""
                app:text="会员卡"/>

            <!--门店-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_store"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                android:layout_marginTop="@dimen/spacing_normal"
                app:position="top"
                app:src="@mipmap/ic_store_normal"
                app:subText=""
                app:text="门店"/>
            <!--反馈-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                app:position="bottom"
                app:src="@mipmap/ic_feedback_normal"
                app:subText="吐槽"
                app:text="反馈"/>


            <!--米西合伙人-->
            <com.bingshanguxue.vector_uikit.SettingsItem
                android:id="@+id/item_parters"
                android:layout_width="match_parent"
                android:layout_height="@dimen/minimum_touch_height"
                android:layout_marginTop="@dimen/spacing_normal"
                app:position="single"
                app:src="@mipmap/icon_mfhpartner_normal"
                app:subText="马上加入"
                app:text="米西合伙人"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
