<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/material_white"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rootview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">
        <!-- 供应商-->
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            android:layout_alignParentStart="true"
            android:textColor="@color/material_black"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_channelId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_id"
            android:layout_marginTop="@dimen/spacing_micro"
            android:layout_marginStart="@dimen/spacing_normal"
            android:text=""
            android:maxLines="1"/>
        <!--批发价-->
        <TextView
            android:id="@+id/tv_channelPointId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_id"
            android:layout_marginTop="@dimen/spacing_micro"
            android:layout_marginStart="@dimen/spacing_normal"
            android:text=""
            android:maxLines="1"/>
        <!--建议零售价-->
        <TextView
            android:id="@+id/tv_createDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_channelPointId"
            android:layout_marginTop="@dimen/spacing_micro"
            android:layout_marginStart="@dimen/spacing_normal"
            android:text=""
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tv_updateDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_createDate"
            android:layout_marginTop="@dimen/spacing_micro"
            android:layout_marginStart="@dimen/spacing_normal"
            android:text=""
            android:maxLines="1"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
