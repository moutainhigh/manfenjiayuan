<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText_milliseconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:textColor="@color/material_black"
        android:inputType="number"/>

    <Button
        android:id="@+id/button_convert_milliseconds_2_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_milliseconds"
        android:layout_marginTop="16dp"
        android:textColor="@color/material_black"
        android:text="Convert"/>

    <TextView
        android:id="@+id/textView_date1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_convert_milliseconds_2_date"
        android:layout_marginTop="16dp"
        android:text="TextView"/>


    <TextView
        android:id="@+id/textView_date2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_date1"
        android:layout_marginTop="16dp"
        android:text="TextView"/>

</RelativeLayout>
